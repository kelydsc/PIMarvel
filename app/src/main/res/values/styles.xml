<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar Theme-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Theme for all titles in the app-->
    <style name="TitleTheme" parent="AppTheme">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">@dimen/titleSize</item>
    </style>

    <!--Theme for all texts in the app-->
    <style name="TextTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

</resources>
