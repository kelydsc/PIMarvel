<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".login.view.LoginActivity"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textViewWelcomeLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/welcomeLogin"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/welcome_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewWelcomeLog"
        app:layout_constraintStart_toStartOf="@+id/textViewWelcomeLog"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeLog">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmailLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPasswordLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#A60A17"
            android:text="@string/login"
            android:textColor="@color/coloredButtonText"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/create_acccount"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutLogin"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutLogin"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutLogin" />

    <TextView
        android:id="@+id/textViewOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/or"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewCreateAccount"
        app:layout_constraintStart_toStartOf="@+id/textViewCreateAccount"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateAccount" />

    <ImageView
        android:id="@+id/imageViewGoogleFacebook"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewOr"
        app:layout_constraintStart_toStartOf="@+id/textViewOr"
        app:layout_constraintTop_toBottomOf="@+id/textViewOr"
        app:srcCompat="@drawable/logogooglefacebook" />

</android.support.constraint.ConstraintLayout>