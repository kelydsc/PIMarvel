<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.digitalhouse.digital.pimarvel">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_marvel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_marvel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.event.EventDetalheActivity"
            android:label="Marvel Universe Events"
            android:parentActivityName=".view.base.BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.base.BaseActivity" />
        </activity>
        <activity
            android:name=".view.serie.SerieDetalheActivity"
            android:label="Marvel Digital Comics"
            android:parentActivityName=".view.base.BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.base.BaseActivity" />
        </activity>
        <activity
            android:name=".view.comic.ComicDetalheActivity"
            android:label="Marvel Universe Comics"
            android:parentActivityName=".view.base.BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.base.BaseActivity" />
        </activity>
        <activity
            android:name=".view.menu.FaqDetailActivity"
            android:label="FAQ&apos;s"
            android:parentActivityName=".view.menu.FaqActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.menu.FaqActivity" />
        </activity>
        <activity
            android:name=".view.menu.AboutActivity"
            android:label="About"
            android:parentActivityName=".view.base.BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.base.BaseActivity" />
        </activity>
        <activity
            android:name=".view.menu.FaqActivity"
            android:parentActivityName=".view.base.BaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.base.BaseActivity" />
        </activity>
        <activity android:name=".view.base.BaseActivity" />
        <activity android:name=".view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.login.LoginActivity" />
        <activity
            android:name=".view.register.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".view.login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.login.LoginActivity" />
        </activity>
    </application>

</manifest>